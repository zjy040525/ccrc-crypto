  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@rslib/core": "^0.12.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.17.1",
    "bumpp": "^10.2.3",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
