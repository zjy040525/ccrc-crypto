{
  "name": "@zjy040525/ccrc-crypto",
  "type": "module",
  "version": "1.0.0-beta.4",
  "packageManager": "pnpm@10.14.0",
  "description": "CCRC 认证加密/解密工具",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
